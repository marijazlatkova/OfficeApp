      <input
        type="password"
        name="newPassword"
        id="newPassword"
        placeholder="Enter your new password"
      />
      <br />
      <input type="submit" value="Reset password" />
    </form>
    <script type="text/javascript" src="../js/resetPassword.js"></script>
  </body>
</html>
