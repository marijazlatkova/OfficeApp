<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="../css/global.css" />
    <link rel="stylesheet" type="text/css" href="../css/my-profile.css" />
  </head>
  <body>
    <div class="wrapper">
      <div class="header-container">
        <img
          class="home-logo"
          src="../images/home-logo.png"
          alt="home-logo"
          onclick="window.location.href = '/home';"
        />
        <div class="title-wrapper">
          <p><%= title %></p>
        </div>
        <hr class="hr-1" />
        <div class="subcontainer">
          <img src="../images/woman_logo.png" alt="profile-picture" />
          <h3><%= username %></h3>
        </div>
      </div>
      <div class="posts-container">
        <p><%= subtitle %></p>
        <% posts.forEach(post => { %>
        <div class="posts">
          <div class="container">
            <img src="/images/<%= image %>" />
            <p><%= post.username %></p>
          </div>
          <form action="/modifyPosts/<%= post._id %>" method="POST">
            <input
              class="comment-input"
              type="text"
              name="comment"
              id="comment-<%= post._id %>"
              value="<%= post.comment %>"
              style="display: none"
            />
            <p class="comment" id="commentText-<%= post._id %>">
              <%= post.comment %>
            </p>
            <div class="modify-delete-wrapper">
              <img
                onclick="modifyPost('<%= post._id %>')"
                class="modify-icon"
                src="../images/modify-icon.png"
                alt="modify-icon"
              />
              <button type="submit" style="display: none">Save</button>
              <a href="/removePosts/<%= post._id %>"
                ><img
                  class="delete-icon"
                  src="../images/delete.png"
                  alt="delete"
              /></a>
            </div>
          </form>
        </div>
        <% }) %>
      </div>
      <br />
      <br />
      <div class="logout-button-wrapper">
        <button
          class="logout-button"
          onclick="window.location.href = '/logout';"
        >
          Log Out
        </button>
      </div>
    </div>
    <script type="text/javascript" src="../js/modifyPost.js"></script>
  </body>
</html>
